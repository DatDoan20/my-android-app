<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="@dimen/_2sdp">
    <!-- 64 colap and expan 256dp-->
    <ImageView
        android:id="@+id/img_avatar_notify"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
       />

    <TextView
        android:id="@+id/txt_name_notify"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@id/img_avatar_notify"
        android:text="@string/reviewPurchasedProduct"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/txt_content_notify"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name_notify"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toEndOf="@id/img_avatar_notify"
        android:text="@string/reviewPurchasedProduct"
        android:textSize="@dimen/_12sdp" />


</RelativeLayout>